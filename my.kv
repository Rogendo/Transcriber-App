<MyLayout>
	
	BoxLayout:
		orientation: "vertical"
		size:root.width,root.height


		padding:50
		spacing:20

		Label:
			id:lebal_1
			text:"this is what was said: "
			color:"black"
			font_size:12

		RoundedButton:
			text:"Transcribe"
			id:btn_1
			font_size:14
			pos_hint:{'center_x':0.5}
			size_hint:.15,.12


<RoundedButton@Button>
	background_color:(0,0,0,0)
	background_normal:""
	canvas.before:
		Color:
			rgba:(48/255,84/255,150/255,1)
		RoundedRectangle:
			size:self.size
			pos:self.pos
			radius:[18]

