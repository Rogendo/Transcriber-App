<MyLayout>
	
	BoxLayout:
		orientation: "vertical"
		size:root.width,root.height


		padding:50
		spacing:20

		Label:
			text:"Transcribed message appears here "
			font_size:16
			color:"grey"		
		Label:
			id:lebal_1
			
			color:"black"
			font_size:20

		RoundedButton:
			text:"Transcribe"
			id:btn_1
			font_size:25
			pos_hint:{'center_x':0.5}
			size_hint:.20,.17
			on_press: root.transcriber_click()	

<RoundedButton@Button>
	background_color:(0,0,0,0)
	background_normal:""
	canvas.before:
		Color:
			rgba:(48/255,84/255,150/255,1)
		RoundedRectangle:
			size:self.size
			pos:self.pos
			radius:[18]

